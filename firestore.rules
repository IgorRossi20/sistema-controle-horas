rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras temporárias para desenvolvimento - PERMITIR ACESSO PÚBLICO
    // ATENÇÃO: Altere estas regras antes de colocar em produção!
    
    // Regra para usuários
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Regra para clientes
    match /clients/{clientId} {
      allow read, write, create: if true;
    }
    
    // Regra para projetos
    match /projects/{projectId} {
      allow read, write, create: if true;
    }
    
    // Regra para registros de horas
    match /timeEntries/{entryId} {
      allow read, write, create: if true;
    }
  }
}